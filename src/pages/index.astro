---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import hero_foto from "../assets/images/hero_foto.webp";
import rundt_logo from "../assets/images/rundt_logo.svg";
import cocktail from "../assets/images/cocktail.svg";
import logo from "../assets/images/logo.svg";
import foto1 from "../assets/images/event_kandidat.jpg";
import foto2 from "../assets/images/event_sommer.jpg";
import foto3 from "../assets/images/event_polter.jpg";

import "../styles/tobii.min.css";
const { href = "#", target = "_self" } = Astro.props;
import "motion";
---

<MainLayout title="Tender">
  <article class="">
    <section
      class="relative flex justify-center items-center w-screen h-screen"
    >
      <Image
        src={hero_foto}
        alt=""
        class="w-full h-full object-cover absolute z-10"
      />
      <Image
        src={rundt_logo}
        alt=""
        class="w-[400px] relative z-20 animate-spin-slow"
      />
    </section>
    <section
      class="whitespace-nowrap overflow-x-hidden py-4 text-white extra-bold bg-[#E52622] open-sans text-2xl"
    >
      <div
        class="inline-block
      animate-infinite-scroll
      whitespace-nowrap
      [&_span]:mx-6"
      >
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
      </div>
      <div
        class="inline-block animate-infinite-scroll whitespace-nowrap [&_span]:mx-6"
        aria-hidden="true"
      >
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
      </div>
    </section>
    <section
      class="grid grid-cols-1 md:grid-cols-3 py-32 px-24 md:px-48 pb-48 md:pb-96"
    >
      <!-- Tekstindholdet i 1/3 af grid -->
      <div class="col-span-1 md:col-span-1 md:order-1">
        <h1 class="open-sans-800 text-2xl md:text-4xl">HVEM ER VI</h1>
        <p class="py-6 md:py-10">
          Lorem ipsum, dolor sit amet consectetur adipisicing elit. Tempora
          facilis et nostrum fugiat molestiae! Repellendus quo facere, labore
          vero qui veniam unde est, perspiciatis aut doloribus soluta suscipit
          voluptatum exercitationem?
        </p>
        <p>
          Lorem ipsum, dolor sit amet consectetur adipisicing elit. Tempora
          facilis et nostrum fugiat molestiae! Repellendus quo facere, labore
          vero qui veniam unde est, perspiciatis aut doloribus soluta suscipit
          voluptatum exercitationem?
        </p>
        <p class="py-6 md:py-10">
          Lorem ipsum, dolor sit amet consectetur adipisicing elit. Tempora
          facilis et nostrum fugiat molestiae! Repellendus quo facere, labore
          vero qui veniam unde est, perspiciatis aut doloribus soluta suscipit
          voluptatum exercitationem?
        </p>
        <div>
          <Button>
            <Link href="/kontakt">BOOK OS</Link>
          </Button>
        </div>
      </div>

      <!-- Billederne i 2/3 af grid -->
      <div
        class="col-span-1 md:col-span-2 order-2 md:order-2 relative mt-12 md:mt-0"
      >
        <ul id="stagger" class="relative list-none staggeranimation">
          <!-- Første billede -->
          <li
            class="relative md:absolute top-0 md:top-[-40px] left-0 md:left-20 w-full md:w-[40%] mb-8 md:mb-0 opacity-0"
          >
            <Image src={foto1} alt="Billede 1" class="w-full" />
          </li>

          <!-- Tredje billede -->
          <li
            class="relative md:absolute top-0 md:top-[300px] left-0 md:left-[100px] w-full md:w-[40%] mb-8 md:mb-0 opacity-0"
          >
            <Image src={foto3} alt="Billede 3" class="w-full" />
          </li>

          <!-- Andet billede -->
          <li
            class="relative md:absolute top-0 md:top-[50px] left-0 md:left-[600px] transform md:-translate-x-1/2 w-full md:w-[40%] opacity-0"
          >
            <Image src={foto2} alt="Billede 2" class="w-full" />
          </li>
        </ul>
      </div>
    </section>
  </article>
</MainLayout>

<style>
  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .animate-spin-slow {
    animation: spin 10s linear infinite; /* 10s er varigheden af en fuld rotation */
  }
</style>

<script>
  import { inView } from "motion";
  import { animate } from "motion";
  import { stagger } from "motion";

  // <-- Stagger på bokse  er -->
  inView("#stagger", () => {
    animate(
      ".staggeranimation li",
      { opacity: [0, 1] },
      {
        delay: stagger(1, { start: 1 }),
      }
    );
  });
</script>
