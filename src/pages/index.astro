---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import hero_foto from "../assets/images/hero_foto.webp";
import rundt_logo from "../assets/images/rundt_logo.svg";
import cocktail from "../assets/images/cocktail.svg";
import logo from "../assets/images/logo.svg";
---

<MainLayout title="Tender">
  <article class="">
    <section
      class="relative flex justify-center items-center w-screen h-screen"
    >
      <Image
        src={hero_foto}
        alt=""
        class="w-full h-full object-cover absolute z-10"
      />
      <Image
        src={rundt_logo}
        alt=""
        class="w-[400px] relative z-20 animate-spin-slow"
      />
    </section>
    <section
      class="whitespace-nowrap overflow-x-hidden py-4 text-white extra-bold bg-[#E52622] open-sans text-2xl"
    >
      <div
        class="inline-block
      animate-infinite-scroll
      whitespace-nowrap
      [&_span]:mx-6"
      >
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
      </div>
      <div
        class="inline-block animate-infinite-scroll whitespace-nowrap [&_span]:mx-6"
        aria-hidden="true"
      >
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
        <span>TENDER</span>
